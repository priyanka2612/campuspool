<h1>Editing Department</h1>
<%= form_for @department do |f| %>
  <% if @department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize @department.errors.count, "error" %> prohibited this department from
        being saved:</h2>
      <ul>
      <% @department.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :dept_name %><br />
    <%= f.text_field :dept_name %>
  </div>
  <div class="field">
    <%= f.label :dept_no %><br />
    <%= f.text_field :dept_no %>
  </div>
  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>


<%= link_to 'Show', @department %> 

